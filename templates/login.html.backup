{% extends "base.html" %}

{% block title %}Prihlásenie - API Dashboard{% endblock %}

{% block content %}
<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="fas fa-rocket fa-3x text-primary mb-3"></i>
                    <h1 class="h3">API Dashboard</h1>
                    <p class="text-muted">Prihlás sa do svojho účtu</p>
                </div>

                <form method="POST">
                    {{ form.hidden_tag() }}

                    <div class="mb-3">
                        {{ form.username.label(class="form-label") }}
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-user"></i>
                            </span>
                            {{ form.username(class="form-control", placeholder="Zadaj používateľské meno") }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form.password.label(class="form-label") }}
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                            {{ form.password(class="form-control", placeholder="Zadaj heslo") }}
                        </div>
                    </div>

                    <div class="d-grid">
                        {{ form.submit(class="btn btn-primary btn-lg") }}
                    </div>
                </form>

                <hr class="my-4">

                <div class="alert alert-info mb-0">
                    <small>
                        <strong>Predvolené prihlasovacie údaje:</strong><br>
                        Užívateľ: <code>admin</code><br>
                        Heslo: <code>admin123</code><br>
                        <em>Zmeň heslo po prvom prihlásení!</em>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
